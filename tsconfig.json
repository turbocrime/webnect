{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,
		"baseUrl": "src"
	},
	"include": [
		"src/**/*.ts"
	],
	"rootDirs": [
		"src"
	]
}