{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/strictest",
	"include": ["src", "src/global.d.ts"],
	"exclude": ["dist"],
	"rootDir": "src",
	"compilerOptions": {
		"lib": ["ESNext"],
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"exactOptionalPropertyTypes": false,
		"module": "NodeNext",
		"target": "ESNext"
	}
}
