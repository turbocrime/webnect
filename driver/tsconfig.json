{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/strictest",
	"include": ["src"],
	"compilerOptions": {
		"lib": ["DOM", "ESNext"],
		"noEmit": false,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"exactOptionalPropertyTypes": false,
		"module": "NodeNext",
		"target": "ESNext"
	}
}
