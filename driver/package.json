{
	"name": "@webnect/driver",
	"author": "turbocrime",
	"description": "a webUSB driver for the xbox360 kinect",
	"version": "0.1.1",
	"type": "module",
	"scripts": {
		"build": "tsc --build",
		"clean": "rm -rfv dist",
		"test": "vitest run --browser.headless",
		"pretest": "playwright install chromium",
		"prepack": "$npm_execpath run clean && $npm_execpath run build"
	},
	"files": [
		"./dist",
		"./src"
	],
	"exports": {
		".": "./src/index.ts",
		"./deraw": "./src/camera/deraw/index.ts"
	},
	"publishConfig": {
		"access": "public",
		"exports": {
			".": {
				"default": "./dist/index.js",
				"type": "./dist/index.d.ts"
			},
			"./deraw": {
				"default": "./dist/camera/deraw/index.js",
				"type": "./dist/camera/deraw/index.d.ts"
			}
		}
	},
	"devDependencies": {
		"@types/w3c-web-usb": "^1.0.12"
	}
}
